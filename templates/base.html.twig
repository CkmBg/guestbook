    <body>
        {% if app.user %}
        {% set panier_taille = app.user.getCart() | length %}
        <header>
            <style>
                .custom{
                    margin: 5px;
                    padding: 10px;
                    position: fixed;
                    bottom: 50px;
                    left: 0px;
                    background-color: black;
                    color: red;
                    font-weight: bold;
                    text-decoration: none;
                    transition-duration: 1s;
                }
                .custom:hover{
                    transform: scale(1.2);
                    transform: translateX(6);
                }
            </style>
            <div class="custom">
                <a class="active" style="color:white;"  href="{{ path('app_cart') }}">Panier ({{ panier_taille }})</a></li>
            </div>
            <div class="header-area ">
                <div id="sticky-header" class="main-header-area">
                    <div class="container-fluid p-3">
                        <div class="row align-items-center no-gutters">
                            <div class="col-xl-5 col-lg-5">
                                <div class="main-menu  d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a class="active"  href="{{ path('homepage', {type: 'BURGER'}) }}">Burger</a></li>
                                            <li><a class="active"  href="{{ path('homepage', {type: 'FRITES'}) }}">Frites</a></li>
                                            <li><a class="active"  href="{{ path('homepage', {type: 'BOISSON'}) }}">Drink</a></li>
                                            <li><a class="active"  href="{{ path('homepage', {type: 'DESSERT'}) }}">Dessert</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-2">
                                <div class="logo-img">
                                    <a href="index.html">
                                        <img src="img/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-5 col-lg-5 d-none d-lg-block">
                                <div class="book_room">
                                    <div class="socail_links">
                                        <ul>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-instagram"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-twitter"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-facebook"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-google-plus"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="book_btn d-none d-xl-block">
                                        <a class="#" href="#">+10 367 453 7382</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        {% endif %}

        {% block body %}{% endblock %}

        {% if app.user %}
        <footer class="footer">
            <div class="footer_top">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-4 col-md-6 col-lg-4">
